<wxs src="../../../utils/tools.wxs" module="tools" />
<cu-custom bgImage="{{topImage}}" isCustom="{{true}}">
  <view slot="content">个人资料</view>
</cu-custom>

<view class="cu-list menu-avatar">
    <view class="cu-item">
      <view class="cu-avatar round lg" style="background-image:url({{statistics.user.avatar}});"></view>
      <view class="content">
        <view class="text-grey">{{statistics.user.nickname}}</view>
        <view class="text-gray text-sm flex">
          <text class="text-cut">
							<text class="cuIcon-discover text-blue  margin-right-xs"></text> {{statistics.user.description}}
          </text>
        </view>
      </view>
      <view class="action">
        <view class="text-grey text-xs"></view>
        <view class="cu-tag cuIcon-more bg-grey sm"></view>
      </view>
    </view>
</view>
<view class="cu-list menu ">
    <view class="cu-item">
      <view class="content">
        <text class="cuIcon-link text-grey"></text>
        <text class="text-blue" bindtap="CopyLink" data-link="{{url}}">{{url}}</text>
      </view>
    </view>
    <view class="cu-item">
      <view class="content">
        <text class="cuIcon-mail text-grey"></text>
        <text class="text-grey">{{statistics.user.email}}</text>
      </view>
    </view>
    <view class="cu-item">
      <view class="content">
        <text class="cuIcon-calendar text-grey"></text>
        <text class="text-grey">{{statistics.establishDays}} 天</text>
      </view>
    </view>
    <view class="cu-item">
      <view class="content">
        <text class="text-grey">累计发表了 {{statistics.postCount}} 篇文章。</text>
      </view>
    </view>
    <view class="cu-item">
      <view class="content">
        <text class="text-grey">累计创建了 {{statistics.categoryCount}} 个分类。</text>
      </view>
    </view>
    <view class="cu-item">
      <view class="content">
        <text class="text-grey">累计创建了 {{statistics.tagCount}} 个标签。</text>
      </view>
    </view>
    <view class="cu-item">
      <view class="content">
        <text class="text-grey">累计获得了 {{statistics.commentCount}} 条评论。</text>
      </view>
    </view>
    <view class="cu-item">
      <view class="content">
        <text class="text-grey">累计添加了 {{statistics.linkCount}} 个友链。</text>
      </view>
    </view>
    <view class="cu-item">
      <view class="content">
        <text class="text-grey">文章总阅读 {{statistics.visitCount}} 次。</text>
      </view>
    </view>
</view>
<!-- 顶图 -->
<view class="UCenter-bg fixed-bg" style="background-image: url('/images/bg/type.jpg');">
</view>
<!--  分类导航  -->
<scroll-view scroll-x class="bg-black nav text-center fixed-nav">
  <view class="cu-item {{index==selected?'text-orange cur':''}}" wx:for="{{navlist}}" bindtap="handleChangeTab" wx:for-item="tab" data-id='{{index}}' wx:key="index">
    {{tab.name}}
  </view>
</scroll-view>
<!-- 避免遮挡，可能有更多的处理方法 -->
<view style="margin-top:400rpx;"></view>
<!--  文章列表展示  -->
<article-list content="{{content}}"></article-list>
<view class="noimage" wx:if="{{!content.length}}">
  <image src="/images/bg/notype.png"></image>    
</view>
<!-- 下拉加载 -->
<view class="cu-load {{loading==true?'loading':'over'}}" wx:if="{{content.length}}"></view>
<!-- 弹框加载 -->
<view class='cu-load load-modal' wx:if="{{loadModal}}">
  <image src='{{logo}}' class='png' mode='aspectFit'></image>
  <view class='gray-text'>加载中...</view>
</view>